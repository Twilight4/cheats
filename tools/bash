# Read in a file and do something

for i in $(cat subdomains); do
     host $i | grep 'has address' | cut -d ' ' -f4
done

while read i; do
     host $i | grep 'has address' | cut -d ' ' -f4
done < subdomains

while read i; do
    country=$(whois "$i" | grep -i country | head -n1 | sed 's/Country:        / /g')
    echo "$i $country" >> tmp
done < $1
